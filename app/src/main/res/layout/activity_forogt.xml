<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".Forgot">
    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/party2"
        android:scaleType="fitXY"
        android:layout_height="170dp"/>

    <com.libizo.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:inputType="textEmailAddress"
        android:hint="abc@gmail.com"
        app:libIZO_setPrefix=" "
        android:textColorHint="#63FF0000"
        android:gravity="center"
        app:libIZO_setBackgroundColor="#FFFFFF"
        app:libIZO_setPrefixTextColor="#FF4081"
        app:libIZO_clearIconTint="#8f1f15"
        app:libIZO_setBorderColor="#8f1f15"
        app:libIZO_setCursorColor="#ff0000"
        android:textColor="#ff0000"
        app:libIZO_setBorderView="true"
        android:padding="8dp"
        android:id="@+id/email"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        app:libIZO_setClearIconVisible="true"
        app:libIZO_setCornerRadius="20dp"
        app:libIZO_setStrokeWidth="2dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:background="@drawable/shape"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:text="SEND PASSWORD RESET LINK"
        android:id="@+id/forgot"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_height="40dp"/>
    <ProgressBar
        android:id="@+id/progressLogin"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:indeterminate="true"
        android:visibility="invisible"
        />

</RelativeLayout>